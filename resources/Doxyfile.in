PROJECT_NAME           = "@PROJECT_NAME@"
OUTPUT_DIRECTORY       = doc
JAVADOC_AUTOBRIEF      = YES
TAB_SIZE               = 4
EXTRACT_ALL            = NO
EXTRACT_PRIVATE        = NO
EXTRACT_STATIC         = YES
INPUT                  = @PROJECT_SOURCE_DIR@ \
                         @PROJECT_SOURCE_DIR@/src \
                         @PROJECT_SOURCE_DIR@/include \
                         @PROJECT_SOURCE_DIR@/python \
                         @PROJECT_SOURCE_DIR@/srcpy \
                         @PROJECT_SOURCE_DIR@/doc \
                         @PROJECT_SOURCE_DIR@/demos
IMAGE_PATH             = @PROJECT_SOURCE_DIR@/doc/pictures \
                         @PROJECT_SOURCE_DIR@/doc/figures
FILE_PATTERNS          = *.h *.hpp *.hh *.cpp *.c *.cc *.hxx *.py *.dox *.md
EXCLUDE_PATTERNS       = */deprecated/*
RECURSIVE              = YES
GENERATE_LATEX         = YES
GENERATE_TAGFILE       = @PROJECT_NAME@.tag
GENERATE_TREEVIEW = YES
GENERATE_HTML = YES
ALIASES += imageSize{3}="\htmlonly <style> div.image img[src=\"\1\"]{\2} </style> \endhtmlonly \image html \1 \"\3\""

